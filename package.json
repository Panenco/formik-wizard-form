{
  "name": "@panenco/formik-wizard-form",
  "version": "0.0.3",
  "description": "Formik wizard form wrapper",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "author": "Panenco <info@panenco.com>",
  "license": "MIT",
  "repository": "git@github.com:Panenco/formik-wizard-form.git",
  "scripts": {
    "build": "yarn run clear && rollup -c && tsc",
    "clear": "rimraf dist lib",
    "lint": "eslint src --ext=jsx,ts,tsx --fix",
    "prettier": "prettier 'src/**/*.{js,jsx,ts,tsx}' --write",
    "pre-commit": "lint-staged",
    "prepublishOnly": "yarn run build",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn run pre-commit"
    }
  },
  "peerDependencies": {
    "formik": "^2.2.9",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "eslint": "^7.0.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-import-resolver-ts": "^0.4.2",
    "eslint-import-resolver-typescript": "^2.2.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.2",
    "formik": "^2.2.9",
    "husky": "^7.0.0",
    "lint-staged": "^9.5.0",
    "prettier": "^2.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^3.5.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-typescript2": "^0.25.3",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "yup": "^0.32.11"
  },
  "packageManager": "yarn@3.2.1"
}
